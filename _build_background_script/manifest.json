{
  "name": "vite-react-crx-template",
  "version": "0.0.1",
  "description": "A Vite + React + TypeScript template for Chrome Extensions",
  "manifest_version": 3,

  "icons": {
    "16": "/images/icon.png",
    "48": "/images/icon.png",
    "128": "/images/icon.png"
  },

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/images/icon.png",
      "48": "/images/icon.png",
      "128": "/images/icon.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ]
}

